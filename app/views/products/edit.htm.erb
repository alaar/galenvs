<div  class="edit-user-wrapper">
  <div class="form-inputs edit-user-form">
    <%= simple_form_for(current_user, url: user_path, html: { method: :put }) do |f| %>
    <%= cl_image_tag(@product.photo, height: 400, width: 300, crop: :fill, :id => "show-image") rescue nil %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.error_notification %>
    <%= f.input :name, required: true, autofocus: true, html: {abbr: :none} %>
    <%= f.input :category, required: true, autofocus: true, html: {abbr: :none} %>
    <div class="form-actions text-center">
      <%= f.button :submit, "Save changes", class: "btn btn-purple"%>
    </div>
    <% end %>
  </div>
</div>
